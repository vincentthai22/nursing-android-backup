<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pumpingHeaderCellBackground">

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="This Month"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/weightTotalDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/averageWeightDataTextView"
        android:layout_alignBottom="@+id/averageWeightDataTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:text="0.6"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/averageWeightDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pumpingsDataTextView"
        android:layout_alignBottom="@+id/pumpingsDataTextView"
        android:layout_alignEnd="@id/averageWeightTextView"

        android:text="0.3"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pumpingsDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dateTypeTextView"
        android:layout_alignBottom="@+id/dateTypeTextView"
        android:layout_alignEnd="@+id/pumpingsTextView"
        android:layout_below="@+id/pumpingsTextView"
        android:text="2.0"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/weightTotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/averageWeightTextView"
        android:layout_alignBottom="@+id/averageWeightTextView"
        android:layout_alignEnd="@+id/weightTotalDataTextView"
        android:layout_marginStart="0dp"
        android:gravity="right"
        android:text="oz total"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/averageWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@id/pumpingsTextView"
        android:gravity="right"
        android:text="oz avg"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/pumpingsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="105dp"
        android:layout_toEndOf="@+id/dateTextView"
        android:text="pumpings"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/dateTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dateTextView"
        android:text="(cumulative)"
        android:textColor="@android:color/background_light" />
</RelativeLayout>