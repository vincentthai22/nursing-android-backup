<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/default_cover_photo_1"
        android:id="@+id/background_image_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black"
        android:scaleType="centerCrop"
        android:layout_height="120dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/background_image_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:id="@+id/background_name_textview"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/background_image_view"
        android:layout_alignStart="@+id/background_name_textview"
        android:layout_marginBottom="11dp"
        android:textColor="@android:color/white"
        android:id="@+id/background_age_textview" />
</RelativeLayout>