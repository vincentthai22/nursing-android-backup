<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <TextView
        android:text="Today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_summary_header_textview"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="mins total"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_summary_header_textview_3"
        android:layout_width="70dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="textEnd"
        style="@style/summarySmallTextStyle2"
        />

    <TextView
        android:text="mins avg"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_summary_header_textview_2"
        app:layout_constraintRight_toLeftOf="@+id/list_item_summary_header_textview_3"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/list_item_summary_header_textview_3"
        style="@style/summarySmallTextStyle2"
        android:textAlignment="textEnd" />

    <TextView
        android:text="feedings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_summary_header_textview_1"
        style="@style/summarySmallTextStyle2"
        android:textAlignment="textEnd"
        app:layout_constraintRight_toLeftOf="@+id/list_item_summary_header_textview_2"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/list_item_summary_header_textview_2" />

    <TextView
        android:text="20.0"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_summary_value_textview_3"
        style="@style/summaryLargeValueStyle2"
        android:textAlignment="textEnd"
        app:layout_constraintRight_toRightOf="@+id/list_item_summary_header_textview_3"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/list_item_summary_header_textview_3"
        />

    <TextView
        android:text="20.0"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_summary_value_textview_2"
        style="@style/summaryLargeValueStyle2"
        android:textAlignment="textEnd"
        app:layout_constraintRight_toRightOf="@+id/list_item_summary_header_textview_2"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/list_item_summary_header_textview_2"
        />

    <TextView
        android:text="1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_summary_value_textview_1"
        style="@style/summaryLargeValueStyle2"
        android:textAlignment="textEnd"
        app:layout_constraintRight_toRightOf="@+id/list_item_summary_header_textview_1"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/list_item_summary_header_textview_1"
        />

    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/list_item_summary_value_textview_1"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>