<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_nursing_summary"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorPrimaryDark"
    >

        <TextView
            android:id="@+id/nursing_summary_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="This Month"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/nursing_summary_type_textview"
            style="@style/summarySmallTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/nursing_summary_date_textview"
            android:layout_alignStart="@+id/nursing_summary_date_textview"
            android:layout_below="@+id/nursing_summary_date_textview"
            android:text="(daily average)" />

        <TextView
            android:id="@+id/nursing_summary_mins_total_textview"
            style="@style/summarySmallTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="mins total" />

        <TextView
            android:id="@+id/nursing_summary_mins_avg_textview"
            style="@style/summarySmallTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="90dp"
            android:layout_marginTop="5dp"
            android:text="mins avg" />

        <TextView
            android:id="@+id/nursing_summary_feedings_textview"
            style="@style/summarySmallTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="170dp"
            android:layout_marginTop="5dp"
            android:text="feedings" />

        <TextView
            android:id="@+id/nursing_summary_mins_avg_value_textview"
            style="@style/summaryLargeValueStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/nursing_summary_mins_avg_textview"
            android:layout_alignTop="@+id/nursing_summary_mins_total_value_textview"
            android:text="0.0" />

        <TextView
            android:id="@+id/nursing_summary_mins_total_value_textview"
            style="@style/summaryLargeValueStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/nursing_summary_mins_total_textview"
            android:layout_below="@+id/nursing_summary_date_textview"
            android:text="0.0" />

        <TextView
            android:id="@+id/nursing_summary_feedings_value_textview"
            style="@style/summaryLargeValueStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/nursing_summary_feedings_textview"
            android:layout_alignTop="@+id/nursing_summary_mins_total_value_textview"
            android:text="0.0" />


</RelativeLayout>