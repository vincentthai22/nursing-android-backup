<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:contextClickable="true"
        android:duplicateParentState="false"
        android:text="Today"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/pumpingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="110dp"
        android:layout_toEndOf="@+id/dateTextView"
        android:isScrollContainer="false"
        android:text="pumpings" />

    <TextView
        android:id="@+id/pumpingsDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pumpingTextView"
        android:layout_below="@+id/pumpingTextView"
        android:text="2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/averageWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pumpingsDataTextView"
        android:layout_marginStart="43dp"
        android:layout_toEndOf="@+id/pumpingTextView"
        android:gravity="right"
        android:text="oz avg" />

    <TextView
        android:id="@+id/averageWeightDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/averageWeightTextView"
        android:layout_below="@+id/averageWeightTextView"
        android:text="0.3"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/totalWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/averageWeightTextView"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/averageWeightTextView"
        android:gravity="right"
        android:text="oz total" />

    <TextView
        android:id="@+id/weightTotalDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/averageWeightDataTextView"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/totalWeightTextView"
        android:layout_marginEnd="5dp"
        android:text="0.6"
        android:textSize="18sp" />
</RelativeLayout>