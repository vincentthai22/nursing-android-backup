<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.CollapsedToolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <style name="AppTheme.ExpandedToolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- CG -->
    <style name="headerTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="subHeaderTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="valueTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dimen4</item>
        <item name="android:paddingBottom">@dimen/dimen4</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="popupMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="summarySmallTextStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="summarySmallTextStyle2">
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="summaryLargeTextStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="summaryLargeValueStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">22sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="summaryLargeValueStyle2">
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">22sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="sectionHeaderBgStyle">
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@color/colorSectionHeaderBg</item>
    </style>

    <style name="sectionHeaderTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sectionValueBgStyle">
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="PumpingTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryPumping</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPumping</item>
        <item name="colorAccent">@color/colorAccentPumping</item>
    </style>
    <style name="PumpingTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="PumpingTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="PumpingTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="PumpingTheme.CollapsedToolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <style name="PumpingTheme.ExpandedToolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>


</resources>
